{
  "extends": ["next/core-web-vitals", "next/typescript", "eslint:recommended",
    "plugin:@typescript-eslint/recommended"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",  // Desactiva la exigencia de tipos explícitos para las funciones públicas
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]// Muestra advertencias para variables no usadas
  }
}
